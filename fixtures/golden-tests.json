{
  "$schema": "./golden-tests.schema.json",
  "version": "1.0",
  "mcp_name": "Mexican Law MCP",
  "description": "Golden contract tests for the Mexican Law MCP covering 185 federal laws — Constitution, codes, data protection, fintech, cybercrime, commercial law, consumer protection, and more",
  "tests": [
    {
      "id": "mx-001",
      "category": "article_retrieval",
      "description": "Retrieve Article 1 of the LFPDPPP (Ley Federal de Protección de Datos Personales en Posesión de los Particulares 2010) -- scope and object of the law",
      "tool": "get_provision",
      "input": {
        "law_identifier": "LFPDPPP",
        "article": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["datos personales", "particulares", "protección"],
        "fields_present": ["text", "article_number"],
        "text_not_empty": true
      }
    },
    {
      "id": "mx-002",
      "category": "article_retrieval",
      "description": "Retrieve Article 1 of the Ley Fintech (Ley para Regular las Instituciones de Tecnología Financiera 2018) -- object and scope",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Ley Fintech",
        "article": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["tecnología financiera", "instituciones"],
        "fields_present": ["text", "article_number"],
        "text_not_empty": true
      }
    },
    {
      "id": "mx-003",
      "category": "article_retrieval",
      "description": "Retrieve cybercrime provisions from the Código Penal Federal",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Código Penal Federal",
        "article": "211bis1"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["sistema", "informática"],
        "fields_present": ["text"],
        "text_not_empty": true
      }
    },
    {
      "id": "mx-004",
      "category": "article_retrieval",
      "description": "Retrieve Article 1 of the LGPDPPSO (public-sector data protection)",
      "tool": "get_provision",
      "input": {
        "law_identifier": "LGPDPPSO",
        "article": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["datos personales", "sujetos obligados"],
        "fields_present": ["text"],
        "text_not_empty": true
      }
    },
    {
      "id": "mx-005",
      "category": "search",
      "description": "Full-text search for 'datos personales' returns LFPDPPP provisions",
      "tool": "search_legislation",
      "input": {
        "query": "datos personales"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["datos personales"]
      }
    },
    {
      "id": "mx-006",
      "category": "search",
      "description": "Full-text search for 'tecnología financiera' returns Ley Fintech provisions",
      "tool": "search_legislation",
      "input": {
        "query": "tecnología financiera"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["tecnología financiera", "Fintech"]
      }
    },
    {
      "id": "mx-007",
      "category": "search",
      "description": "Full-text search for 'firma electrónica' returns e-signature law provisions",
      "tool": "search_legislation",
      "input": {
        "query": "firma electrónica"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1,
        "any_result_contains": ["firma", "electrónica"]
      }
    },
    {
      "id": "mx-008",
      "category": "list_laws",
      "description": "List all Mexican federal laws returns 185 statutes",
      "tool": "list_laws",
      "input": {},
      "assertions": {
        "result_not_empty": true,
        "min_results": 100
      }
    },
    {
      "id": "mx-009",
      "category": "article_retrieval",
      "description": "Retrieve Article 1 of the Ley General de Sociedades Mercantiles -- scope of commercial companies law",
      "tool": "get_provision",
      "input": {
        "law_identifier": "LGSM",
        "article": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["sociedades mercantiles", "sociedad"],
        "fields_present": ["text"],
        "text_not_empty": true
      }
    },
    {
      "id": "mx-010",
      "category": "article_retrieval",
      "description": "Retrieve Article 1 of the LFPC (consumer protection)",
      "tool": "get_provision",
      "input": {
        "law_identifier": "LFPC",
        "article": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["consumidor", "protección"],
        "fields_present": ["text"],
        "text_not_empty": true
      }
    },
    {
      "id": "mx-011",
      "category": "negative_test",
      "description": "Non-existent Mexican law returns graceful error or empty result",
      "tool": "get_provision",
      "input": {
        "law_identifier": "Ley Federal de Protección de Unicornios Digitales 2099",
        "article": "1"
      },
      "assertions": {
        "handles_gracefully": true
      }
    },
    {
      "id": "mx-012",
      "category": "negative_test",
      "description": "Malformed article number returns graceful error or empty result",
      "tool": "get_provision",
      "input": {
        "law_identifier": "LFPDPPP",
        "article": "999ZZZ-INVALID"
      },
      "assertions": {
        "handles_gracefully": true
      }
    }
  ]
}
